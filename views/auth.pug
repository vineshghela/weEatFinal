          ul.navbar-nav.mr-auto
            li.nav-item.active
              a.nav-link(href='#')
                | Home 
                span.sr-only (current)
            li.nav-item
              a.nav-link(href='/about') Who are we
            li.nav-item
              a.nav-link(href='/') Reviews
